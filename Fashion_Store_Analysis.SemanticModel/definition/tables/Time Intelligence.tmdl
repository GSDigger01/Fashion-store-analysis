table 'Time Intelligence'
	lineageTag: 792e2351-63ba-4b57-8e47-175def14f9a6

	calculationGroup

		calculationItem CY = ```
				
				    SELECTEDMEASURE()
				```

		calculationItem PY = ```
				
				    CALCULATE(
				        SELECTEDMEASURE(), SAMEPERIODLASTYEAR(Calendrier_auto[Date])
				)
				```

		calculationItem 'YoY % with Arrows' = ```
				
				VAR CurrentValue = SELECTEDMEASURE()
				VAR PriorYearValue = 
				    CALCULATE(
				        SELECTEDMEASURE(),
				        SAMEPERIODLASTYEAR('Calendrier_auto'[Date])
				    )
				VAR YoYChange = DIVIDE(CurrentValue - PriorYearValue, ABS(PriorYearValue), BLANK())
				VAR YoYPercentText = FORMAT(YoYChange, "+0.0%;-0.0%;0.0%")
				
				VAR Arrow = 
				    SWITCH(
				        TRUE(),
				        YoYChange > 0, "⬆",
				        YoYChange < 0, "⬇",
				        "➡️"
				    )
				
				RETURN
				IF(
				    ISBLANK(YoYChange),
				    BLANK(),
				    YoYPercentText & " " & Arrow
				)
				
				```

		calculationItem YoY = ```
				
				VAR ly = CALCULATE(
				                SELECTEDMEASURE(),
				                SAMEPERIODLASTYEAR(Calendrier_auto[Date])
				)
				
				VAR dif = SELECTEDMEASURE() - ly
				RETURN dif
				
				
				```

